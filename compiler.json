{
    "schema": 1,
    "id": "messiah-stable",
    "name": "Messiah Compiler",
    "channel": "stable",

    "version": "0.1.1",
    "engine": "Malos",

    "mode": "service",
    
    "platforms": ["windows"],
    "architecture": ["x86_64"],

    "service": {
        "protocol": "tcp",
        "protocol_version": 1,
        "host": "127.0.0.1",
        "port": 42207,
        "lan_capable": true,
        "message_format": "newline-json",
        "max_message_size": 65536
    },

    "entry": {
        "executable": "Malos Runtime.exe",
        "args": []
    },

    "bridge": {
        "language": "python",
        "path": "bridge/python/bridge.py"
    },

    "capabilities": {
        "build": true,
        "debug": true,
        "hot_reload": false
    },

    "engine_compatibility": {
        "min": "0.0.1",
        "max": "1.0.x"
    },

    "source": {
        "type": "community",
        "url": "https://github.com/phaedalus/Messiah"
    }
}